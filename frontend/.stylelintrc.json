  "overrides": [
        {
      "files": "**/*.scss",
      "plugins": ["stylelint-scss"],
      "rules": {
        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": ["value"]
          }
        ],
        "function-no-unknown": null,
        "scss/function-no-unknown": [
          true,
          {
            "ignoreFunctions": ["global"]
          }
        ]
      }
